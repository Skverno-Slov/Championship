<Page x:Class="WEMMWpf.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WEMMWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" Loaded="Page_Loaded">

    <Canvas>
        <DockPanel x:Name="EffishesyDockPanel" Width="400"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Background="White"
               MouseLeftButtonDown="TargetDockPanel_MouseLeftButtonDown"
               MouseMove="EffishesyDockPanel_MouseMove"
               MouseLeftButtonUp="TargetDockPanel_MouseLeftButtonUp"
               Canvas.Left="{Binding EffishesyDockPanelX}"
               Canvas.Top="{Binding EffishesyDockPanelY}">
            <DockPanel DockPanel.Dock="Top">
                <StackPanel>
                    <TextBlock Text="Эффективность сети"
                       FontSize="18"
                       Foreground="#1099ff"
                       Margin="5"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,5,0">
                    <Button x:Name="EffishesyHideButton" Width="20">
                        <Image Source="/Images/blueEye.png"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </DockPanel>
        <DockPanel x:Name="StateDockPanel" Width="400"
       HorizontalAlignment="Left"
       VerticalAlignment="Center"
       Background="White"
                   MouseLeftButtonDown="TargetDockPanel_MouseLeftButtonDown"
                   MouseMove="StateDockPanel_MouseMove"
                   MouseLeftButtonUp="TargetDockPanel_MouseLeftButtonUp"
       Canvas.Left="{Binding StateDockPanelX}"
       Canvas.Top="{Binding StateDockPanelY}">
            <DockPanel DockPanel.Dock="Top">
                <StackPanel>
                    <TextBlock Text="Состояние сети"
               FontSize="18"
               Foreground="#1099ff"
               Margin="5"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,5,0">
                    <Button x:Name="StateHideButton" Width="20">
                        <Image Source="/Images/blueEye.png"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </DockPanel>
        <DockPanel x:Name="SummaryDockPanel" Width="400"
HorizontalAlignment="Left"
VerticalAlignment="Center"
Background="White"
                   MouseLeftButtonDown="TargetDockPanel_MouseLeftButtonDown"
                   MouseMove="SummaryDockPanel_MouseMove"
                   MouseLeftButtonUp="TargetDockPanel_MouseLeftButtonUp"
Canvas.Left="{Binding SummaryDockPanelX}"
Canvas.Top="{Binding SummaryDockPanelY}">
            <DockPanel DockPanel.Dock="Top">
                <StackPanel>
                    <TextBlock Text="Сводка"
        FontSize="18"
        Foreground="#1099ff"
        Margin="5"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right"
         Orientation="Horizontal"
         VerticalAlignment="Center"
         HorizontalAlignment="Right"
         Margin="0,0,5,0">
                    <Button x:Name="SummaryHideButton" Width="20">
                        <Image Source="/Images/blueEye.png"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </DockPanel>
        <DockPanel x:Name="NewsDockPanel" Width="400"
HorizontalAlignment="Left"
VerticalAlignment="Center"
Background="White"
                   MouseLeftButtonDown="TargetDockPanel_MouseLeftButtonDown"
                   MouseMove="NewsDockPanel_MouseMove"
                   MouseLeftButtonUp="TargetDockPanel_MouseLeftButtonUp"
Canvas.Left="{Binding NewsDockPanelX}"
Canvas.Top="{Binding NewsDockPanelY}">
            <DockPanel DockPanel.Dock="Top">
                <StackPanel>
                    <TextBlock Text="Новости"
        FontSize="18"
        Foreground="#1099ff"
        Margin="5"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right"
         Orientation="Horizontal"
         VerticalAlignment="Center"
         HorizontalAlignment="Right"
         Margin="0,0,5,0">
                    <Button x:Name="NewsHideButton" Width="20">
                        <Image Source="/Images/blueEye.png"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </DockPanel>
        <DockPanel x:Name="SalesDockPanel" Width="800"
HorizontalAlignment="Left"
VerticalAlignment="Center"
Background="White"
                   MouseLeftButtonDown="TargetDockPanel_MouseLeftButtonDown"
                   MouseMove="SalesDockPanel_MouseMove"
                   MouseLeftButtonUp="TargetDockPanel_MouseLeftButtonUp"
Canvas.Left="{Binding SalesDockPanelX}"
Canvas.Top="{Binding SalesDockPanelY}">
            <DockPanel DockPanel.Dock="Top">
                <StackPanel>
                    <TextBlock Text="Динамика продаж за последние 10 дней"
        FontSize="18"
        Foreground="#1099ff"
        Margin="5"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right"
         Orientation="Horizontal"
         VerticalAlignment="Center"
         HorizontalAlignment="Right"
         Margin="0,0,5,0">
                    <Button x:Name="SalesHideButton" Width="20">
                        <Image Source="/Images/blueEye.png"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </DockPanel>
    </Canvas>
</Page>
