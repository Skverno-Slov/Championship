<Window x:Class="WEMMWpf.Windows.MachineRedactorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WEMMWpf.Windows"
        mc:Ignorable="d"
        Title="Создание ТА" Height="620" Width="800" Loaded="MachineRedactorWindow_Loaded">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Background="LightGray">
            <TextBlock Text="Создание торгового автомата"
                       Margin="5,10,5,10"
                       Foreground="#1099ff"
                       FontSize="20"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom"
                    Background="LightGray"
                    Orientation="Horizontal">
            <Button x:Name="SaveButton"
                    Content="Сохранить"
                    Background="#1099ff"
                    Margin="10,10,2,10" Width="80"
                    HorizontalAlignment="Left"
                    Foreground="White"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="80" 
                    Margin="2,10,10,10" Click="CancelButton_Click"/>
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="5,5,5,5">
                <TextBlock Text="Название ТА *"/>
                <TextBox Text="{Binding VendingMachine.Name}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="0" Grid.Column="1">
                <TextBlock Text="Производитель *"/>
                <ComboBox/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="0" Grid.Column="2">
                <TextBlock Text="Модель ТА *"/>
                <ComboBox/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="1" Grid.Column="0">
                <TextBlock Text="Режим работы *"/>
                <ComboBox ItemsSource="{Binding WorkModes}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="WorkModeId" 
                          SelectedValue="{Binding VendingMachine.WorkModeId}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Производитель ТА (Slave) *"/>
                <TextBox Text="-" Background="LightGray"
                         IsEnabled="False"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="1" Grid.Column="2">
                <TextBlock Text="Модель ТА (Slave) *"/>
                <TextBox Text="-" Background="LightGray" IsEnabled="False"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="2" Grid.Column="0">
                <TextBlock Text="Адрес *"/>
                <TextBox Text="{Binding VendingMachine.Location}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="2" Grid.Column="1">
                <TextBlock Text="Место *"/>
                <ComboBox ItemsSource="{Binding MachinePlaces}" DisplayMemberPath="Name" SelectedValuePath="PlaceId" SelectedValue="{Binding VendingMachine.PlaceId}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="2" Grid.Column="2">
                <TextBlock Text="Координаты"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Ш." VerticalAlignment="Center"/>
                    <TextBox Margin="5" Width="100" Text="{Binding VendingMachine.Latitude}"/>
                    <TextBlock Text="Д." VerticalAlignment="Center"/>
                    <TextBox Margin="5" Width="100" Text="{Binding VendingMachine.Longitude}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="3" Grid.Column="0">
                <TextBlock Text="Номер автомата *"/>
                <TextBox Text="{Binding VendingMachine.SerialNumber}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="3" Grid.Column="1">

                <TextBlock Text="Время работы (Формат: 8:00 - 19:00)"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="80" Margin="5" Text="{Binding VendingMachine.StartHour}"/>
                    <TextBlock Text=" - " VerticalAlignment="Center"/>
                    <TextBox Width="80" Margin="5" Text="{Binding VendingMachine.EndHour}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="3" Grid.Column="2">
                <TextBlock Text="Часовой пояс *"/>
                <ComboBox ItemsSource="{Binding TimeZones}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding VendingMachine.Timezone}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="4" Grid.Column="0">
                <TextBlock Text="Товарная матрица"/>
                <ComboBox ItemsSource="{Binding Models}" DisplayMemberPath="Name" SelectedValuePath="ModelId" SelectedValue="{Binding VendingMachine.ModelId}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="4" Grid.Column="1">
                <TextBlock Text="Шалон крит. значений"/>
                <ComboBox ItemsSource="{Binding Templates}" DisplayMemberPath="Name" SelectedValuePath="TemplateId" SelectedValue="{Binding VendingMachine.CriticalThresholdTemplateId}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="4" Grid.Column="2">
                <TextBlock Text="Шаблон уведомлений"/>
                <ComboBox ItemsSource="{Binding Templates}" DisplayMemberPath="Name" SelectedValuePath="TemplateId" SelectedValue="{Binding VendingMachine.NotificationTemplateId}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="6" Grid.Column="0">
                <TextBlock Text="Клиент"/>
                <ComboBox ItemsSource="{Binding Users}" DisplayMemberPath="LastName" SelectedValuePath="UserId" SelectedValue="{Binding VendingMachine.UserId}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2">
                <TextBlock Text="Платёжная система *"/>
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding VendingMachine.HasCoin}">
                        <TextBlock Text="Монетопр." Margin="0,0,20,0"/>
                    </CheckBox>
                    <CheckBox IsChecked="{Binding VendingMachine.HasBill}">
                        <TextBlock Text="Купюропр." Margin="0,0,20,0"/>
                    </CheckBox>
                    <CheckBox IsChecked="{Binding VendingMachine.HasQr}">
                        <TextBlock Text="Модуль б/н опл." Margin="0,0,20,0"/>
                    </CheckBox>
                    <CheckBox IsChecked="{Binding VendingMachine.HasNfc}">
                        <TextBlock Text="QR-платежи" Margin="0,0,20,0"/>
                    </CheckBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="8" Grid.Column="0">
                <TextBlock Text="RFID карты обслуживания"/>
                <TextBox Text="{Binding VendingMachine.RfidService}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="8" Grid.Column="1">
                <TextBlock Text="RFID карты индексации"/>
                <TextBox Text="{Binding VendingMachine.RfidCashCollection}" />
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="8" Grid.Column="2">
                <TextBlock Text="RFID карты загрузки"/>
                <TextBox Text="{Binding VendingMachine.RfidLoading}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="9" Grid.Column="0">
                <TextBlock Text="Id кассы Kit Online (только в случае жёсткой привязки)" TextWrapping="Wrap"/>
                <TextBox Text="{Binding VendingMachine.KitOnlineId}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="9" Grid.Column="1">
                <TextBlock Text="Приоритет обслуживания *"/>
                <ComboBox ItemsSource="{Binding ServicePriorities}" DisplayMemberPath="Name" SelectedValuePath="PriorityId" SelectedValue="{Binding VendingMachine.PriorityId}"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="9" Grid.Column="2">
                <TextBlock Text="Модем *"/>
                <TextBox IsEnabled="False"
                         Background="LightGray"/>
            </StackPanel>
            <StackPanel Margin="5,5,5,5" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3">
                <TextBlock Text="Примечания"/>
                <TextBox AcceptsReturn="True" Height="54" Text="{Binding VendingMachine.Notes}"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
