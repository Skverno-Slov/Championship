<Window x:Class="WEMMWpf.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WEMMWpf.Windows"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="400" Loaded="AuthorizationWindow_Loaded">
    <StackPanel DockPanel.Dock="Top"
                    HorizontalAlignment="Center"
                    Width="400">
        <TextBlock Text="Джутсу Вендинг"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="30" FontWeight="Black"
                       Margin="20"/>
        <TextBlock Text="Почта" Margin="60,2,2,0"/>
        <TextBox x:Name="EmailTextBox" Width="300" Margin="5"/>
        <TextBlock Text="Пароль" Margin="60,2,2,0"/>
        <PasswordBox x:Name="PasswordBox" Width="300" Margin="5"/>
        <Button x:Name="LoginButton" Content="Войти" Width="100" Margin="10" Click="LoginButton_Click"/>
    </StackPanel>
</Window>
