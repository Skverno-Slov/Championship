<Window x:Class="WEMM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WEMM"
        mc:Ignorable="d"
        Title="Джутсу Вендинг" Height="450" Width="800" Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="BurgerMenuText" TargetType="Button">
            <Setter Property="Background" Value="#232323"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Image Source="/Images/Logo.png" Width="120"/>
            <ComboBox x:Name="ProfileComboBox" DockPanel.Dock="Right"
                      SelectedIndex="0" IsReadOnly="True"
                      SelectionChanged="ProfileComboBox_SelectionChanged">
                <ComboBoxItem Visibility="Collapsed">
                    <DockPanel>
                        <Image x:Name="AvatarImage" Width="45" DockPanel.Dock="Left"/>
                        <TextBlock x:Name="RoleTextBlock" DockPanel.Dock="Bottom"/>
                        <TextBlock x:Name="FullNameTextBlock" Width="200"/>
                    </DockPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <DockPanel>
                        <Image Source="/Images/user.png" Width="20"/>
                        <Button Content="Мой профиль"/>
                    </DockPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <DockPanel>
                        <Image Source="/Images/lock.png" Width="20"/>
                        <Button Content="Мои сеансы"/>
                    </DockPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <DockPanel>
                        <Image Source="/Images/power-off.png" Width="20"/>
                        <Button x:Name="LogoutButton" Content="Выход" Click="LogoutButton_Click"/>
                    </DockPanel>
                </ComboBoxItem>
            </ComboBox>
            <StackPanel/>
        </DockPanel>
        <DockPanel x:Name="BurgerMenuDockPanel" DockPanel.Dock="Left"
                   Width="220"
                   Visibility="Collapsed"
                   Background="#232323">
            <DockPanel DockPanel.Dock="Top">
                <Button x:Name="BurgerMenuButton" Content="≡"
                        Height="40"
                        Background="#181818"
                        Foreground="White"
                        FontSize="30"
                        Width="40"
                        DockPanel.Dock="Right" Click="BurgerMenuButton_Click"/>
                <TextBlock Text="Навигация" VerticalAlignment="Center" FontSize="20" Foreground="White" Margin="5"/>
            </DockPanel>
            <StackPanel DockPanel.Dock="Bottom">
                <DockPanel HorizontalAlignment="Left" Width="220">
                    <Image Source="/Images/search.png" Width="20" Margin="5" />
                    <Button x:Name="MainPageButton" Content="Главная" Style="{StaticResource BurgerMenuText}" HorizontalAlignment="Left" Click="MainPageButton_Click"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Left" Width="220">
                    <Image Source="/Images/display.png" Width="20" Margin="5"/>
                    <Button Content="Монитор ТА" Style="{StaticResource BurgerMenuText}"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Left" Width="220">
                    <Image Source="/Images/document.png" Width="20" Margin="5"/>
                    <TextBlock Text="▽" HorizontalAlignment="Right" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="5"
                               DockPanel.Dock="Right"/>
                    <Button Content="Детальные отчёты" Style="{StaticResource BurgerMenuText}"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Left" Width="220">
                    <Image Source="/Images/cart.png" Width="20" Margin="5"/>
                    <TextBlock Text="▽" HorizontalAlignment="Right" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="5"
                               DockPanel.Dock="Right"/>
                    <Button Content="Учёт ТМЦ" Style="{StaticResource BurgerMenuText}"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Left" Width="220">
                    <Image Source="/Images/cogs.png" Width="20" Margin="5"/>
                    <TextBlock x:Name="AdministrateArrowTextBlock" Text="▽" HorizontalAlignment="Right" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="5"
                               DockPanel.Dock="Right"/>
                    <Button x:Name="AdministrateButton"
                            Content="Администрирование"
                            Style="{StaticResource BurgerMenuText}"
                            Click="AdministrateButton_Click"/>
                </DockPanel>
                <StackPanel x:Name="AdministrateStackPanel" Visibility="Collapsed">
                    <Button x:Name="WendingMachinesButton"
                            Content="Торговые автоматы" Margin="40,0,0,0"
                            Style="{StaticResource BurgerMenuText}"
                            Click="WendingMachinesButton_Click"/>
                    <Button Content="Компании" Margin="40,0,0,0"
                            Style="{StaticResource BurgerMenuText}"/>
                    <Button Content="Пользователи" Margin="40,0,0,0"
                            Style="{StaticResource BurgerMenuText}"/>
                    <Button Content="Модемы" Margin="40,0,0,0"
                            Style="{StaticResource BurgerMenuText}"/>
                    <Button Content="Дополнительные" Margin="40,0,0,0"
                            Style="{StaticResource BurgerMenuText}"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Background="#181818">
            <TextBlock x:Name="RouteTextBlock"
                       Text="Главная"
                       DockPanel.Dock="Right"
                       Margin="10"
                       Foreground="Gray"/>
            <Button x:Name="BurgerMenuButtonHidden" Content="≡"
                    Height="40"
                    Background="#181818"
                    Foreground="White"
                    FontSize="30"
                    Width="40"
                    DockPanel.Dock="Left" Click="BurgerMenuButton_Click"/>
            <TextBlock Text="ООО Торговые автоматы" VerticalAlignment="Center"
                       FontSize="16" Margin="10"
                       Foreground="White"/>
        </DockPanel>
        <Frame x:Name="MainFrame" Background="LightGray"/>
    </DockPanel>
</Window>
