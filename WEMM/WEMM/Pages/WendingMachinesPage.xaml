<Window x:Class="WEMMWpf.Pages.WendingMachinesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WEMMWpf.Pages"
        mc:Ignorable="d"
        Title="WendingMachinesPage" Height="450" Width="800">
    <DataGrid AutoGenerateColumns="False"
              IsReadOnly="True"
              ItemsSource="{Binding WendingMachinesDto}"
              CanUserAddRows="False"
              CanUserDeleteRows="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID" Binding="{Binding SerialNumber}"/>
            <DataGridTextColumn Header="Название автомата" Binding="{Binding Name}"/>
            <DataGridTextColumn Header="Модель" Binding="{Binding ModelName}"/>
            <DataGridTextColumn Header="Модель" Binding="{Binding ModelName}"/>
        </DataGrid.Columns>

    </DataGrid>
</Window>
